@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "GetCitiesSearchByName";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Tur Rotası Arama Sayfası</h1>

<form asp-action="GetCitiesSearchByName" method="get" asp-area="Member">
    <div>
        <p>
            Lütfen Aranacak Şehri Giriniz:  
            <input class="form-control" type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Şehir Ara" class="btn btn-outline-dark" />
        </p>
    </div>
</form>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Süre</th>
        <th>Kapasite</th>
        <th>Fiyat</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DestinationID</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Capacity</td>
            <td>@item.Price tl</td>
            <td><a href="#" class="btn btn-outline-info">Detaylar</a></td>
        </tr>
    }
</table>

