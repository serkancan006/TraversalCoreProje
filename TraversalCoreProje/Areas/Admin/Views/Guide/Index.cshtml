@using EntityLayer.Concrete
@model List<Guide>
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<style>
    img{
        border-radius: 50%;
    }
</style>

<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Durum</th>
        <th>Düzenle</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" height="60" width="60" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a href="#" class="btn btn-outline-@(item.Status ? "warning" : "info")">
                    @(item.Status ? "Pasif Yap" : "Aktif Yap")
                </a>
            </td>
            <td><a href="#" class="btn btn-outline-success">Düzenle</a></td>
            </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber</a>
